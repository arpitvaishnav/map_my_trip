= form_for @day, html: { class: "form form-horizontal day" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :travel_city_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.collection_select :travel_city_id, TravelCity.all, :id, :to_city, class: 'form-control', required: true
    = f.error_span(:travel_city_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), days_path, :class => 'btn btn-default'
