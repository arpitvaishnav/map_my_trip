= form_for @trip, html: { multipart: true, class: "form form-horizontal trip" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :description, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :description, class: 'form-control', required: true
    = f.error_span(:description)
  .form-group
    = f.label :from_date, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :from_date, class: 'form-control', required: true
    = f.error_span(:from_date)
  .form-group
    = f.label :to_date, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :to_date, class: 'form-control', required: true
    = f.error_span(:to_date)
  .form-group
    = f.label :image, class: 'control-label col-lg-2'
    .col-lg-10
      = f.fields_for :image_attributes do |image_fields|
        = image_fields.file_field :image
        = f.error_span(:image_attributes)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), trips_path, :class => 'btn btn-default'
